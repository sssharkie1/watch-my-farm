{{!-- Here we are looping through the errors from the apiRoutes and displaying them to the user using bootstrap alerts --}}
{{#if errors}}
	{{#each errors}}
		<div class = "alert alert-danger">{{msg}}</div>
	{{/each}}
{{/if}}

<div class = "row">
	<div class = "col-md-offset-4 col-md-4">
		<form class= "signup-form" method = "post" action = "/api/signup">
			<div class="form-group">
		        <label for="first_name">First Name</label>
		        <input type="text" class="form-control input-lg" name = "first_name" id="first_name" placeholder="Betty" required>
		    </div>
			<div class="form-group">
		        <label for="last_name">Last Name</label>
		        <input type="text" class="form-control input-lg" name = "last_name" id="last_name" placeholder="White" required>
		    </div>		    		
			<div class="form-group">
		        <label for="email">Email address</label>
		        <input type="email" class="form-control input-lg" name = "useremail" id="useremail" placeholder="Email" required>
		    </div>
		    <div class="form-group">
		        <label for="password">Password</label>
		        <input type="password" class="form-control input-lg" name="password" id="password" placeholder="Password" required	>
		    </div>

		    <div class="form-group">
		        <label for="text">Farm Name:</label>
		        <input type="text" class="form-control input-lg" name="farmname" id="farmname" placeholder="Farm Name" required	>
		    </div>

		    <div class="form-group">
		        <label for="text">Address:</label>
		        <input type="text" class="form-control input-lg" name="address" id="address" placeholder="Address">
		    </div>

		    <div class="form-group">
		        <label for="text">Home Phone:</label>
		        <input type="text" class="form-control input-lg" name="homephone" id="homephone" pattern='\d{10}' placeholder="Home Phone">
		    </div>

		    <div class="form-group">
		        <label for="text">Cell Phone:</label>
		        <input type="text" class="form-control input-lg" name="cellphone" id="cellphone" placeholder="Cell Phone">
		    </div>

		    <div class="form-group">
		        <label for="text">Emergency Contact Name:</label>
		        <input type="text" class="form-control input-lg" name="emergencyname" id="emergencyname" placeholder="Emergency Contact Name">
		    </div>

		    <div class="form-group">
		        <label for="text">Emergency Contact Phone:</label>
		        <input type="text" class="form-control input-lg" name="emergencyphone" id="emergencyphone" placeholder="Emergency Contact Phone">
		    </div>

		    <div class="form-group">
		        <label for="text">Veterinarian Name:</label>
		        <input type="text" class="form-control input-lg" name="vetname" id="vetname" placeholder="Veterinarian Name">
		    </div>

		    <div class="form-group">
		        <label for="text">Veterinarian Phone:</label>
		        <input type="text" class="form-control input-lg" name="vetphone" id="vetphone" placeholder="Veterinarian Phone">
		    </div>
		    <div class="text-center">

		     <button type="submit" class="btn btn-primary center-block red-button">REGISTER</button>
			
			<br ><br>
			<p class ="text-center">Already have an account?  <a class="dark-text-link" href="/login">&nbsp;Log in here</a></p>
		     </div>

		</form>
		
	</div><!-- ./col-md -->
</div> <!-- ./row -->