{{!-- Here we are looping through the errors from the apiRoutes and displaying them to the user using bootstrap alerts --}}
{{#if errors}}
	{{#each errors}}
		<div class = "alert alert-danger">{{msg}}</div>
	{{/each}}
{{/if}}

<div class = "row">
	<div class = "col-md-offset-4 col-md-4">
		<form class= "signup-form" method = "post" action = "/api/signup">
			<div class="form-group">
		        <label for="email">Email address</label>
		        <input type="email" class="form-control input-lg" name = "useremail" id="useremail" placeholder="Email" required>
		    </div>
		    <div class="form-group">
		        <label for="password">Password</label>
		        <input type="password" class="form-control input-lg" name="password" id="password" placeholder="Password" required	>
		    </div>

		    <div class="form-group">
		        <label for="text">Farm Name</label>
		        <input type="text" class="form-control input-lg" name="farmname" id="farmname" placeholder="Farm Name" required	>
		    </div>

		     <button type="submit" class="btn btn-primary center-block">REGISTER</button>
			
			<br >
			<p class ="text-center">Already have an account?<a href="/login">&nbsp; Log in here</a></p>
		     <p class ="text-center"><a href="#">&nbsp; WatchMyFarm Home</a></p>

		</form>
		
	</div><!-- ./col-md -->
</div> <!-- ./row -->